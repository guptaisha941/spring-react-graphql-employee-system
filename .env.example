# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
DB_NAME=employee_db
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# Database Connection Pool (Optional)
DB_MAX_POOL_SIZE=20
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=300000
DB_MAX_LIFETIME=1200000

# ============================================
# Spring Boot Service Configuration
# ============================================
SPRING_PROFILES_ACTIVE=prod
EMPLOYEE_SERVICE_PORT=8080

# JWT Configuration (REQUIRED - Change in production!)
JWT_SECRET=your-256-bit-secret-key-change-in-production-must-be-at-least-32-chars
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000
JWT_ISSUER=employee-service

# CORS Configuration
# Comma-separated list of allowed origins
# For local development: http://localhost:3000
# For production: https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Logging Configuration (Optional)
LOG_LEVEL_APP=INFO
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_SQL=WARN
LOG_FILE_PATH=/var/log/employee-service/application.log

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=3000

# Frontend API URL (build-time variable)
# This is the URL the frontend will use to call the backend API
# For Docker: Use http://localhost:8080/api (external access)
# For internal Docker network: Use http://employee-service:8080/api
VITE_API_URL=http://localhost:8080/api

# ============================================
# Production Notes
# ============================================
# 1. Change JWT_SECRET to a secure random string (at least 32 characters)
# 2. Update CORS_ALLOWED_ORIGINS with your production frontend URL
# 3. Use strong database passwords in production
# 4. Consider using Docker secrets for sensitive values in production
